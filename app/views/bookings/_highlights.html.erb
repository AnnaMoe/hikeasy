<div class="container booking-form">
    <div class="card-form">
    <div class="card-booking-body">
    <div>
    <span><i class="far fa-calendar-alt"></i> <%=@booking.hike.length%> Days</span>
    <br>
    <span><i class="fas fa-hiking"></i> <%=@booking.hike.distance%>km</span>
    <br>
    <span><i class="fas fa-mountain"></i> <%=@booking.hike.terrain%></span>
    <br>
    <span><i class="fas fa-expand-alt"></i> <%=@booking.hike.elevation%></span>
    <br>
    <span><%=@booking.hike.difficulty%></span>
    </div>
    <button type="button" class="button" data-toggle="modal" data-target="#exampleModal">
    Leave a Review
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'review' %>
      </div>
      <div class="modal-footer">
        <%# <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> %>
        
      </div>
    </div>
  </div>
</div>    
    </div>
</div>
