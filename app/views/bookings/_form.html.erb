<div class="container booking-form">
    <div class="card-form">
    <div class="card-booking-body">
    <div class="col float-right">
     <%= link_to toggle_favorite_hike_path(@hike), remote: true, method: :post do %>
        <div class="like-icon mx-2 <%= 'not-favorited' unless current_user.favorited?(@hike) %>" data-id="<%= @hike.id %>">
          <i class="float-right fas fa-heart"></i>
        </div>
      <% end %>
    </div>
    <h4 class="float-right card-booking-price"><strong><%=@hike.length%> Days</strong></h4>
    <h3 class="card-booking-title"><strong>$<%=@hike.price%></strong></h3>
    <p><i class="fas fa-star"></i> Reviews</p>
        <%= simple_form_for [@hike, @booking] do |f| %>
        <%= f.input :group_hike, collection: @hike.group_hikes, selected: @hike.group_hikes.first %>
        
        <%= f.button :button, "Book now", class: "btn btn-primary w-100 mt-2 p-3" %>
      <% end %>
     
    </div>
</div>

