<div class="container booking-form">
    <div class="card-form">
    <div class="card-booking-body">
    <p class="card-booking-title"><strong><%=@hike.name%></strong></p>
    <button class="btn"><i class="far fa-heart"></i> Save</button>
    <div>
    <span>Difficulty: <%=@hike.difficulty%></span>
    <br>
    <span>Distance: <%=@hike.length%></span>
    <br>
    <span>Accommodation: <%=@hike.accomodation_type%></span>
    <br>
    </div>

      <%= simple_form_for [@hike, @booking] do |f| %>
        <%= f.input :date, as: :string, label: false, placeholder: 'Start Date'%>
        <div class="card-booking-price"><strong>$<%= @hike.price %></strong></span></div>
        <%= f.button :button, "Book now", class: "button w-100 mt-2" %>
      <% end %>
    </div>
</div>

