<div class="container booking-form">
    <div class="card-form">
    <div class="card-booking-body">
    <p><i class="fas fa-heart"></i></p>
    <p class="float-right card-booking-price"><strong>$<%=@hike.price%></strong></p>
    <h5 class="card-booking-title"><strong> <%=@hike.name%></strong></h5>
    <div class="mb-2">
    <span><p><em>July 23rd - July 30th</p></em></span>
    <br>
    <span><i class="far fa-calendar-alt"></i> <%=@hike.length%> Days</span>
    <br>
    <span><i class="fas fa-hiking"></i> <%=@hike.distance%> Kilometers</span>
    <br>
    <span><i class="fas fa-mountain"></i> <%=@hike.terrain%></span>
    <br>
    <span><i class="fas fa-expand-alt"></i> <%=@hike.elevation%> Meters</span>
    <br>
    <span><%=@hike.difficulty%></span>
    </div>

      <%= simple_form_for [@hike, @booking] do |f| %>
        <%= f.input :date, as: :string, label: false, placeholder: 'July 23rd-July 30th'%>
        <%= f.button :button, "Book now", class: "btn-book w-100 mt-2" %>
      <% end %>
      <%= link_to toggle_favorite_hike_path(@hike), remote: true, method: :post do %>
        <div class="like-icon mx-2 <%= 'favourite' if current_user.favorited?(@hike) %>" data-id="<%= @hike.id %>">
          <i class="fas fa-heart"></i>
        </div>
      <% end %>
    </div>
</div>

