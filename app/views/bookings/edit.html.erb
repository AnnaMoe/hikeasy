<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <div class="bg-white rounded p-3 shadow confirmation mt-3 mb-3">
        <h3 class= "mb-4">Complete your booking</h3>
        <%= simple_form_for [@hike, @booking] do |f| %>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.input :first_name, placeholder: 'First Name', input_html: { value: @booking.first_name } %>
            </div>
            <div class="form-group col-md-6">
              <%= f.input :last_name, placeholder: 'Last Name', input_html: { value:@booking.last_name } %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.input :email, placeholder: 'Email Address', input_html: { value: @booking.email } %>
            </div>
            <div class="form-group col-md-6">
              <%= f.input :phone_number, placeholder: 'Phone Number' %>
            </div>
          </div>
          
          <h4 class="mb-3">Payment</h4>
          <div class="form-row">
            <div class="form-group col-lg-12">  
            <label>Credit Card Number</label>
              <div class="input-group">
                <%= f.input_field :credit_card, placeholder: 'Card Number', class: 'form-control' %>
                <div class="input-group-text">
                  <div class="icon-container">
                    <i class="fab fa-cc-visa"></i>
                    <i class="fab fa-cc-amex"></i>
                    <i class="fab fa-cc-mastercard"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-row">
            <div class="col-md-4">
              <%= f.input :credit_card_in_database, label: 'Expiration Month', placeholder: 'MM/YY' %>
            </div>
            <div class="col-md-4">
              <%= f.input :credit_card_in_database, label: 'Expiration Year', placeholder: 'MM/YY' %>
            </div>
            <div class="col-md-4">
              <%= f.input :credit_card_in_database, label: 'CVC', placeholder: 'CVC' %>
            </div>  
          </div>

          
          <div class="form-row">
            <small><em class="text-muted">By clicking <strong>'Confirm'</strong> you are agreeing to our <a href="#">Terms & Conditions</a>, <a href="#">Privacy Policy</a>, and to receive booking-related messages.</em></small>
          </div>
          <hr />
          <button class="btn btn-primary btn-lg btn-block" type="button" data-toggle="modal" data-target="#exampleModal">Confirm booking</button>

        <% end %>
      </div>
    </div>
  </div>

  

  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Great, your booking has been confirmed</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          You will receive a confirmation email soon with your booking details.
        </div>
        <div class="modal-footer">
          <%= link_to "Visit Dashboard", dashboard_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

