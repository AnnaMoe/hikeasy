<h1 class="header">Find your hike</h1>
  <div>


<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Explore" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

<% @hikes.each do |hike| %>

  <div class="column">
    <div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
      <h3><%= hike.name %></h3>
      <p><%= hike.difficulty %></p>
      <p><%= hike.accomodation_type %></p>
      <p><%= hike.price %>$</p>
    </div>
  </div>
</div>

<% end %>
