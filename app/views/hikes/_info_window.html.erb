
<%= link_to hike_path(hike), class: 'text-decoration-none' do %> 
  <div class="container">
    <div class="row">    
      <% if hike.photos.attached? %>
        <%= cl_image_tag hike.photos.first.key, class: 'hike-image' %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="img-fluid" alt="...">
      <% end %>
    </div>
    <div class="d-flex justify-content-between pt-1">
            <%= link_to toggle_favorite_hike_path(hike), remote: true, method: :post do %>
            <div class="like-icon mx-2 <%= 'red' if current_user.favorited?(hike) %>" data-id="<%= hike.id %>">
            <i class="fas fa-heart"></i>
            <% end %>
      <div class="font-weight-bold"><%= hike.name %></div>
      <div class="font-weight-bold">$<%= hike.price %></div>
    </div>
    <div class="d-flex">
      <%= hike.region %> 
    </div>
    <div class="d-flex text-capitalize">
      <%= hike.difficulty %>
    </div>
  </div>
<% end %>


       