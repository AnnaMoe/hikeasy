<div class="container mt-3">
  <div class ="hello_user">Hello, <%= current_user.first_name%></div>

  <div class="notification-blank">
        <img src='<%= current_user.avatar_url %>' class="avatar-large" />
        <div class="notification-content-blank align-items-centers">
          <h3 class="m-0 ml-1">Hello <%=@booking.user.first_name %>. Welcome to <strong>
              <%= @chatroom.name %>!
            </strong></h3>
        </div>

  <div class ="sub_title">Your bookings:</div>
  <%= render "bookings", bookings: @bookings %>
</div>
<div class="container mt-3">
  <div class ="sub_title">Your favourites:</div>
  <%= render "favourites", favourite_hikes: @favourite_hikes %>
</div>
